<<<@include "text.mogu">>>
<<<display
display mock_link nextbutton
>>>

template bigtext
    type    :   text
    css     :   "EIGHTEENPT"
end template

template medtext
    type    :   text
    css     :   "FOURTEENPT"

widget wrapper
    type    :   container
    children
        genius
        show:rewind
        show:advance
    end children      
end widget

widget DEBUG
    type    :   text
    text    :   "DEBUGGING"
end widget

template next
    type    :   text
    css     :   "mock_link"
    text    :   "> > >"
end template

widget show:rewind
    type    :   text
    css     :   "display rewind"
    text    :   "< < <"

    events
        when clicked {
            decrement widget genius index
            set widget show:advance css to "hidden"
        }
    end events
end widget

widget show:advance
    type    :   text
    css     :   "hidden"
    text    :   "> > >"
    events
        when clicked {
            increment widget genius index
            set own css to "hidden"
        }
    end events
end widget

widget genius
    type    :   stack
    children
        :introduction
        :server
        :database
        :language
        :demo
        :dynamic
        :metaprogramming
        :future
        :problems
    end children
end widget

widget genius:introduction
    type :   container
    children
        :hook
        :nbullets
    end children
end widget

widget genius:introduction:hook
    template    :   medtext
    text    :   @introduction:hook
end widget

widget genius:introduction:nbullets
    template    :   next
    events
        when clicked {
            append widget genius:introduction:bullets to widget genius:introduction
            set widget show:advance css to @display 
            remove widget genius:introduction:nbullets
        }
    end events
end widget

widget genius:introduction:bullets
    template    :   medtext
    text        :   @introduction:bullets
end widget

