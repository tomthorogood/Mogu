widget say_hello
    type    :   text
    template    :   bigtext
    text    :   "Say hello!"
    css     :   "mock_link"

    events
        when clicked {
            set widget empty text to "Hello, House of Genius!"
            set widget show:advance css to @display
        }
    end events
end widget

