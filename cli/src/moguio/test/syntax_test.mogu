widget test_widget
    type    :   container
    content :   "Hello, World!"
    template:   test_template
    events
        when clicked {
            set own css to "clicked_style"
            reset widget another_child
            set widget another_child text to (17+4)
        }
    end events
    children
        test_child
        another_child
    end children
end widget


widget test_child
    type    :   container
end widget


widget another_child
    type    :   text
    content :   "I'm a baby."
end widget

template test_template
    css     :   "aStyle aBolderStyle"
end template

policy a_policy
    mode    :   replace
    data    :   hash
end policy

validator a_validator
    type    :   regex
    test    :   "foobarbaz"
end validator

data test_datalist
    list
        "monkey"
        "zebra"
        "gorilla"
    end list
end data

data test_datahash
    hash
        cute    :  "monkey",
        striped :  "zebra",
        large   :  "gorilla"
    end hash
end data

data test_datavalue
    42
end data
